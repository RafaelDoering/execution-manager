{
  "name": "execution-manager",
  "version": "1.3.0",
  "description": "A promise manager",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "files": [
    "/build",
    "/LICENSE",
    "/README.md",
    "/package.json"
  ],
  "lint-staged": {
    "src/*.ts": [
      "eslint --cache --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "exports": {
    ".": {
      "require": "./build/index.js",
      "import": "./build/index.mjs",
      "types": "./build/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prettier:check": "prettier --check src/**/*.ts --no-error-on-unmatched-pattern",
    "prettier:fix": "prettier --write src/**/*.ts --ignore-unknown --no-error-on-unmatched-pattern",
    "lint:check": "eslint --cache --ext .ts ./src",
    "lint:fix": "eslint --cache --fix --ext .ts ./src",
    "check": "npm lint:check && npm prettier:check",
    "fix": "npm lint:fix && npm prettier:fix",
    "clean": "rm -rf build/*",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:esm": "rollup --config rollup.config.js",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "rollup": "rollup --config rollup.config.js",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "play": "nodemon --exec ts-node ./playground.ts",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RafaelDoering/execution-manager.git"
  },
  "author": "RafaelDoering",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-ban": "^1.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "rollup": "^3.20.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.2"
  }
}
